---
import Layout from '@/layouts/Layout.astro';
import Project from '@/components/Project.astro'
import Skill from '@/components/Skill.astro'
import TinySkill from '@/components/TinySkill.astro'
import Experience from '@/components/Experience.astro'
import loc from '@/utils/locale'

import {
	Amazonwebservices,
	Azuredevops,
	C,
	Clickhouse,
	Cloudflare,
	Cloudflareworkers,
	Cmake,
	Csharp,
	Docker,
	Elastic,
	Git,
	Githubactions,
	Go,
	Hetzner,
	Homebrew,
	Ios,
	Kubernetes,
	Macos,
	Mongodb,
	Monogame,
	Nextdotjs,
	Opengl,
	Openjdk,
	Postgresql,
	Python,
	React,
	Redis,
	Remix,
	Rust,
	Spring,
	Svelte,
	Swift,
	Typescript,
	Visualstudiocode,
	Xcode,
} from 'simple-icons-astro'

const desc = [
	'I\'m Aarnav, a student and software engineer based in Washington, D.C.',
	'This is my portfolio, where I showcase my work and experience.',
].join(' ')
---

<Layout title="Portfolio" desc={desc}>
	<h2
		id="experience"
		class="font-serif text-2xl my-4"
	>
		{loc('portfolio.experience')}
	</h2>
	<div class="grid grid-cols-1 gap-8">
		<Experience
			name="SWIFTnet Automation Intern"
			where="Swift"
			when="June 2024 - August 2024"
			description={`
				SWIFTNet handles nearly 80% of global financial traffic.
				I'm rebuilding a core component of the testing infrastructure
				which is responsible for creating and managing different testing
				rules for end-to-end tests on the SWIFT messaging network.
			`}
			link="https://swift.com"
			icon="swift"
		/>
		<Experience
			name="Teaching Assistant"
			where="GMU"
			when="August 2023 - May 2025"
			description={`
				I teach a variety of students for the Computer Science
				CS 262: Introduction to Low-level Programming course.
				The class covers C, Unix, and a dive into how
				systems programming works. My responsibilities include
				handling labs, conducting review sessions, and
				proctoring exams.
			`}
			link="https://cs.gmu.edu"
			icon="gmu"
		/>
		<Experience
			name="Computer Science, B.S."
			where="GMU"
			when="August 2022 - May 2025"
			description={`
				I'm pursuing a Bachelor of Science in Computer Science
				at George Mason University. I've written a paper on the
				dangers posed by artificial intelligence and created a
				set of guidelines to make a safety framework for AI.
			`}
			link="https://gmu.edu"
			icon="gmu"
		/>
	</div>

	<hr class="mt-2" />
	<h2
		id="skills"
		class="font-serif text-2xl my-4"
	>
		{loc('portfolio.skills')}
	</h2>

	<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
		<Skill name="TypeScript" year={2016} icon={Typescript} />
		<Skill name="Java/Kotlin" year={2016} icon={Openjdk} />
		<Skill name="C/C++" year={2021} icon={C} />
		<Skill name="Rust" year={2021} icon={Rust} />
		<Skill name="React" year={2018} icon={React} />
		<Skill name="Kubernetes" year={2021} icon={Kubernetes} />
		<Skill name="Docker (Compose)" year={2020} icon={Docker} />
		<Skill name="AWS" year={2021} icon={Amazonwebservices} />
	</div>

	<div class="flex gap-2 mt-10 flex-wrap">
		<TinySkill name="Git" year={2016} icon={Git} />
		<TinySkill name="PostgreSQL" year={2020} icon={Postgresql} />
		<TinySkill name="Python" year={2017} icon={Python} />
		<TinySkill name="Spring" year={2023} icon={Spring} />
		<TinySkill name="Objective-C" year={2020} icon={Ios} />
		<TinySkill name="Swift" year={2020} icon={Swift} />
		<TinySkill name="MongoDB" year={2020} icon={Mongodb} />
		<TinySkill name="Elasticsearch" year={2021} icon={Elastic} />
		<TinySkill name="Clickhouse" year={2021} icon={Clickhouse} />
		<TinySkill name="Redis" year={2021} icon={Redis} />
		<TinySkill name="Cloudflare" year={2019} icon={Cloudflare} />
		<TinySkill name="Svelte" year={2020} icon={Svelte} />
		<TinySkill name="Remix" year={2021} icon={Remix} />
		<TinySkill name="Next.js" year={2021} icon={Nextdotjs} />
		<TinySkill name="Go" year={2023} icon={Go} />
	</div>
	<p class="my-4 text-sm text-neutral-500 dark:text-neutral-400">
		Tip: Hover/Tap on each icon for more information.
	</p>

	<hr class="mt-2" />
	<h2
		id="projects"
		class="font-serif text-2xl mt-4 mb-2"
	>
		{loc('portfolio.projects')}
	</h2>
	<p class="my-4">
		This is a chronological list of projects I have worked on that are publicly available.
		There are many more private projects that I have worked on, but they are not listed here.
		The best place to learn about them is on my
		{' '}
		<a
			href="/blog"
			class="underline"
		>
			blog
		</a>
		{' '}
		or contacting me directly at
		{' '}
		<a
			class="underline"
			href="mailto:aarnavtale@icloud.com"
		>
			aarnavtale@icloud.com
		</a>
		{' '}
		if you are a recruiter.
	</p>
	<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
		<Project
			name="Headplane"
			description="A proper management plane for Headscale, the self-hosted Tailscale controller"
			link="https://github.com/tale/headplane"
			icons={[Remix, React, Typescript]}
		/>
		<Project
			name="trap2"
			description="A suckless-inspired, GPU accelerated terminal emulator built on libvterm"
			link="https://github.com/tale/trap2"
			icons={[C, Cmake, Opengl]}
		/>
		<Project
			name="Canister"
			description="High-speed search engine and analytics aggregator for iOS APT repositories"
			link="https://canister.me"
			icons={[Rust, Go, Typescript, Postgresql, Kubernetes]}
		/>
		<Project
			name="kubectl-action"
			description="GitHub Action to interact with Kubernetes clusters using kubectl"
			link="https://github.com/tale/kubectl-action"
			icons={[Typescript, Githubactions, Kubernetes]}
		/>
		<Project
			name="Chariz"
			description="Enabling developers to easily sell and distribute their software on iOS"
			link="https://chariz.com"
			icons={[Typescript, Mongodb, React, Kubernetes]}
		/>
		<Project
			name="bruh"
			description="A much faster alternative to the brew CLI for macOS packaging"
			link="https://github.com/tale/bruh"
			icons={[Typescript, Homebrew]}
		/>
		<Project
			name="masonmaps"
			description="A clone of the popular GeoGuessr game for George Mason University"
			link="https://github.com/tale/masonmaps"
			icons={[Openjdk, Spring]}
		/>
		<Project
			name="calboard"
			description="Minimal BlackBoard calendar proxy that fixes deadlines and cleans up clutter"
			link="https://github.com/tale/calboard"
			icons={[Typescript, Cloudflareworkers]}
		/>
		<Project
			name="kittea-bot"
			description="A bridge between Minecraft Hypixel's in-game chat and a Discord server"
			link="https://github.com/tale/kittea-bot"
			icons={[Typescript, Kubernetes]}
		/>
		<Project
			name="daview"
			description="Proxy a WebDAV instance with a nicer UI and authentication"
			link="https://github.com/tale/daview"
			icons={[Typescript, Kubernetes, Hetzner]}
		/>
		<Project
			name="iconset"
			description="A nifty command-line tool to customize macOS icons quickly"
			link="https://github.com/tale/iconset"
			icons={[Swift, Macos]}
		/>
		<Project
			name="logos-vscode"
			description="Syntax and rich editor support for the Logos preprocessing language in VS Code"
			link="https://github.com/tale/logos-vscode"
			icons={[Typescript, Visualstudiocode, Azuredevops]}
		/>
		<Project
			name="Sileo"
			description="The standard package manager that ships on thousands of jailbroken iOS devices"
			link="https://getsileo.app"
			icons={[Swift, Ios]}
		/>
		<Project
			name="lyricify"
			description="View song lyrics from your lock screen on iOS or iPadOS, regardless of the music app"
			link="https://chariz.com/buy/lyricify"
			icons={[Swift, Ios]}
		/>
		<Project
			name="notations"
			description="The sticky notes experience reimagined for iOS and iPadOS"
			link="https://github.com/tale/notations"
			icons={[Swift, Ios]}
		/>
		<Project
			name="Slinky.codes"
			description="An incentive-based Python learning platform targeted towards kids (VTHacks IX)"
			link="https://devpost.com/software/learn-py"
			icons={[React, Postgresql, Typescript, Docker]}
		/>
		<Project
			name="Grapple"
			description="A wild space grappling game! (AcademiesHacks2 winning project)"
			link="https://devpost.com/software/grappel"
			icons={[Csharp, Monogame]}
		/>
		<Project
			name="Supernova"
			description="A procedurally generated, infinite space shooter! (HackBI IV winning project)"
			link="https://devpost.com/software/supernova-18oqzl"
			icons={[Csharp, Monogame]}
		/>
	</div>
</Layout>
