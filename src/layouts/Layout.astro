---
import '@fontsource/atkinson-hyperlegible'
import '@fontsource/crimson-pro/700.css'
import Header from '@/components/Header.astro'

interface Props {
	title?: string;
}

const { title } = Astro.props
const headline = title ? `${title} â€¢ Aarnav Tale` : 'Aarnav Tale'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={Astro.url.href} />
		<title>{headline}</title>

		<meta name="title" content={headline} />
		<meta name="generator" content={Astro.generator} />
		<meta name="darkreader-lock" />
		<slot name="head" />
	</head>

	<body class="overscroll-none bg-neutral-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100">
		<div class="max-w-3xl mx-auto p-4 my-4">
			<Header />
			<slot />
		</div>
	</body>
</html>
